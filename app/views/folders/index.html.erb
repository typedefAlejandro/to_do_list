<div class="login-bg" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(120deg, #e0e0e0 60%, #c7a72a 100%);">
  <div class="login-card" style="background: #fff; border-radius: 18px; box-shadow: 0 6px 32px #0002; padding: 2.5rem 2.2rem 2rem 2.2rem; min-width: 340px; max-width: 95vw; display: flex; flex-direction: column; align-items: center;">
    <h1 style="color: #8c6b6b; font-size: 2.1rem; margin-bottom: 1.5rem; font-weight: bold; letter-spacing: 0.5px;">Pastas</h1>
    <div id="folders" style="width: 100%; display: flex; flex-direction: column; gap: 1.2rem; align-items: center;">
      <% @folders.each do |folder| %>
        <div style="width: 100%; max-width: 420px; background: #f8f8f8; border-radius: 10px; box-shadow: 0 2px 8px #0001; padding: 1.1rem 1.2rem; display: flex; justify-content: space-between; align-items: center;">
          <div style="font-size: 1.15rem; color: #8c6b6b; font-weight: 500;">
            <%= folder.name %>
          </div>
          <div style="display: flex; gap: 0.7rem; align-items: center;">
            <%= link_to "Mostrar pastas", folder, style: 'background: #c7a72a; color: #fff; border: none; border-radius: 7px; padding: 7px 16px; font-size: 1rem; font-weight: bold; text-decoration: none; box-shadow: 0 1px 4px #0001; transition: background 0.2s; cursor: pointer;' %>
          </div>
        </div>
      <% end %>
    </div>
    <div style="margin-top: 2.2rem; width: 100%; display: flex; justify-content: center;">
      <%= link_to "Nova pasta", new_folder_path, style: 'background: #8c6b6b; color: #fff; border: none; border-radius: 8px; padding: 12px 0; min-width: 160px; font-size: 1.1rem; font-weight: bold; box-shadow: 0 2px 8px #0001; transition: background 0.2s; cursor: pointer; text-align: center; text-decoration: none;' %>
    </div>
  </div>
</div>
